{
  "name": "truecurrency",
  "version": "2.0.0",
  "description": "",
  "main": "truffle.js",
  "directories": {
    "test": "./test.sh"
  },
  "scripts": {
    "coverage": "./coverage.sh",
    "flatten": "./flatten-all",
    "clean": "rm -rf ./build",
    "typecheck": "tsc --noEmit",
    "lint:sol": "solhint 'contracts/**/*.sol' && prettylint 'contracts/**/*.sol'",
    "lint:js": "eslint '{test,scripts}/**/*.js'",
    "lint:ts": "eslint '{test,test-ts,scripts}/**/*.ts' -c .eslintrc.typescript.js",
    "lint": "yarn lint:js && yarn lint:sol && yarn lint:ts",
    "build:sol": "waffle .waffle.json",
    "build:types": "typechain --target ethers-v5 --outDir build/types 'build/*.json'",
    "build": "yarn clean && yarn build:sol && yarn build:types && bash ./indexBuild.sh",
    "test:js": "./test.sh",
    "test:ts": "mocha",
    "test": "yarn test:ts && yarn test:js",
    "checks": "yarn lint && yarn typecheck && yarn test",
    "deploy_truecurrency": "npx ts-node scripts/deploy_truecurrency.ts",
    "hardhat:compile": "npx hardhat compile",
    "hardhat:deploy": "npx hardhat run deploy/deploy.ts --network hardhat",
    "hardhat:deploy-avalanche": "npx hardhat run deploy/deploy.ts --network avalanche",
    "hardhat:deploy-proxy-avalanche": "npx hardhat run deploy/deploy_proxy.ts --network avalanche",
    "hardhat:verify-avalanche": "npx hardhat verify --network avalanche 0xE934c39Cc1e75168b62CDb69Cc8dbe4Ee9A69c06"
  },
  "husky": {
    "hooks": {}
  },
  "author": "",
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "@nomiclabs/buidler-ethers": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@typechain/ethers-v5": "^9.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^12.20.46",
    "bignumber.js": "9.0.0",
    "chai": "^4.3.6",
    "chai-bignumber": "^3.0.0",
    "chai-bn": "^0.3.1",
    "dotenv": "^10.0.0",
    "ethers": "^5.6.2",
    "hardhat": "^2.9.2",
    "hardhat-proxy": "^1.0.0",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.12.0",
    "typechain": "^7.0.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.1.0",
    "openzeppelin-solidity": "^2.4.0",
    "@ethersproject/bignumber": "^5.5.0",
    "@ethersproject/providers": "^5.5.3",
    "@typechain/hardhat": "^4.0.0"
  },
  "resolutions": {
    "ethereum-waffle/**/ganache-core": "^2.13.0",
    "@ethereum-waffle/provider/ganache-core": "^2.13.0"
  }
}
